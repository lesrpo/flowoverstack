<div class="container">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">
			<h1>Preguntas</h1>
			<table class="table table-responsive">
				<% @questions.each do |question| %>
					<tr>
						<td class="text-center"><h3>0</h3>Votos</td>
						<td class="text-center"><h3>0</h3>Respuestas</td>
						<td>
							<%= link_to question.title, question %>
							<div class="question-details">
								Pregunto <%= question.user.email %> hace <%=(question.created_at) %>
							</div>
						</td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>
